generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String?
  image        String?
  passwordHash String?
  defaultRole  Role?        // Rôle choisi à l'inscription (pour redirection)
  deletedAt    DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  accounts     Account[]
  ownedClinics Clinic[]     @relation("OwnerClinics")
  memberships  Membership[]
  sessions     Session[]
  
  // Medical relations
  assignedAppointments Appointment[]
  medicalRecords MedicalRecord[]
  prescriptions Prescription[] @relation("UserPrescriptions")
}

model Clinic {
  id          String       @id @default(cuid())
  name        String
  address     String?
  phone       String?
  ownerId     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  owner       User?        @relation("OwnerClinics", fields: [ownerId], references: [id])
  memberships Membership[]
  patients    Patient[]
  services    Service[]
  appointments Appointment[]
  medicalRecords MedicalRecord[]
  prescriptions Prescription[] @relation("ClinicPrescriptions")
}

model Membership {
  id       String @id @default(cuid())
  userId   String
  clinicId String
  role     Role
  clinic   Clinic @relation(fields: [clinicId], references: [id])
  user     User   @relation(fields: [userId], references: [id])

  @@unique([userId, clinicId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refresh_token")
  access_token      String? @map("access_token")
  expires_at        Int?    @map("expires_at")
  token_type        String? @map("token_type")
  scope             String?
  id_token          String? @map("id_token")
  session_state     String? @map("session_state")
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Medical Management Models ---

model Patient {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  dateOfBirth DateTime?
  gender      String?
  address     String?
  // Medical info
  bloodType   String?
  allergies   String?
  medications String?
  notes       String?
  
  // Belongs to a clinic
  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  
  // Relations
  appointments Appointment[]
  medicalRecords MedicalRecord[]
  prescriptions Prescription[] @relation("PatientPrescriptions")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([clinicId, email])
  @@index([clinicId, lastName, firstName])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  duration    Int      // Duration in minutes
  price       Float    // Price in local currency
  category    String?
  isActive    Boolean  @default(true)
  
  // Belongs to a clinic
  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  
  // Relations
  appointments Appointment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([clinicId, isActive])
}

model Appointment {
  id          String   @id @default(cuid())
  date        DateTime
  duration    Int      // Duration in minutes
  status      AppointmentStatus @default(SCHEDULED)
  notes       String?
  
  // Relations
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  serviceId   String
  service     Service  @relation(fields: [serviceId], references: [id])
  
  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  
  // Assigned staff (optional)
  assignedUserId String?
  assignedUser   User?  @relation(fields: [assignedUserId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([clinicId, date])
  @@index([patientId])
}

model MedicalRecord {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  diagnosis   String?
  treatment   String?
  notes       String?
  
  // Relations
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  
  // Created by which user
  createdById String
  createdBy   User     @relation(fields: [createdById], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([patientId, date])
}

model Prescription {
  id            String   @id @default(cuid())
  appointmentId String?
  patientId     String
  patient       Patient  @relation("PatientPrescriptions", fields: [patientId], references: [id], onDelete: Cascade)
  clinicId      String
  clinic        Clinic   @relation("ClinicPrescriptions", fields: [clinicId], references: [id], onDelete: Cascade)
  createdById   String
  createdBy     User     @relation("UserPrescriptions", fields: [createdById], references: [id])
  
  diagnosis     String   // Diagnostic médical
  medications   String   // Liste des médicaments (format texte ou JSON)
  instructions  String?  // Instructions pour le patient
  notes         String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([patientId])
  @@index([clinicId])
  @@index([appointmentId])
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum Role {
  ADMIN
  DOCTOR
  RECEPTIONIST
  PATIENT
}
