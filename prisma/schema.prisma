generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Multi-tenant core models + Auth.js compatible tables ---

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  image         String?
  passwordHash  String?
  // Soft delete flag for safety
  deletedAt     DateTime?

  // Auth.js relations
  accounts      Account[]
  sessions      Session[]

  // Tenancy via memberships (user can belong to many clinics with roles)
  memberships   Membership[]

  // Back-relation for clinics owned by this user
  ownedClinics  Clinic[]  @relation("OwnerClinics")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Clinic {
  id          String        @id @default(cuid())
  name        String
  address     String?
  phone       String?
  // Optional owner user id for quick access; full roles in Membership
  ownerId     String?
  owner       User?         @relation("OwnerClinics", fields: [ownerId], references: [id])

  memberships Membership[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum Role {
  ADMIN
  DOCTOR
  RECEPTIONIST
}

model Membership {
  id        String  @id @default(cuid())
  userId    String
  clinicId  String
  role      Role

  user      User    @relation(fields: [userId], references: [id])
  clinic    Clinic  @relation(fields: [clinicId], references: [id])

  @@unique([userId, clinicId])
}

// --- Auth.js (NextAuth) standard models with Prisma Adapter ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refresh_token")
  access_token      String? @map("access_token")
  expires_at        Int?    @map("expires_at")
  token_type        String? @map("token_type")
  scope             String?
  id_token          String? @map("id_token")
  session_state     String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
